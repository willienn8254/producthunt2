
<div class="container">
	<div class="row">
		<div class="col-sm-12">


				<h1>Productos</h1>

				<% if signed_in? %>
					<div class="text-right">
						<%= link_to "Publicar producto", new_product_path, class: "btn btn-primary"	%>
					</div>
				<% end %>
					<table class="table">
	
						<tr>
							<th>Id</th>
							<th>Nombre</th>
							<th>Url</th>
							<th>Descripcion</th>
							<th></th>
						</tr>

						<% @products.each do |product| %>

						<tr>

							<td><%=product.id %></td>
							<td><%= link_to product.name, product %></td>
							<td><%=product.url %></td>
							<td><%=product.description %></td>
							<td>

								<% if signed_in? %>
								<%= link_to "Editar", edit_product_path(product) %> 
								<%= link_to "Eliminar", product, method: :delete, data:{ confirm: "Estas seguro de eliminar este producto"} %> 
								<% end %>

							</td>
							

						</tr>



						<% end %>


					</table>
			


		</div>


	</div>

</div>





